<div>
  <h3>By: {{question.author}}</h3>
  <p><strong>Q: </strong>{{question.content}}</p>
  <p>Notes: {{question.notes}}</p>
  {{update-question question=question update="update"}}
  <button class="btn btn-default" {{action 'delete' question}}>Delete</button>
  {{new-answer save2="save3"}}
</div>
<div>
  <h2>Answers:</h2>
    {{#each model.answers as |answer|}}
      <p>{{answer.author}}</p>
      <p>{{answer.content}}</p>
      <button {{action 'delete' answer}}>Delete</button>
    {{/each}}
</div>
